extends layout

block content
  script(src="../javascripts/game.js")
  div#game-container
    h1 The Game Begins!
    p Welcome #{name}
    ul
      li#health Health: #{health}
      li#points Points: #{points}
      li#highscore Highscore: #{highscore}
      li#room Current room: #{room}

    button#reset-points Reset highscore
    button#add-point Add point

    br
    br

    input#text-input(type="text")
    button#submit Submit command

    br
    br

    div#cmd-container
  div#chat-container